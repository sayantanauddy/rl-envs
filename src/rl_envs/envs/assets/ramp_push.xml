<mujoco>
    <option gravity="0 0 -9.81" timestep="0.002" integrator="RK4"> 
        <flag contact="enable" />
    </option>
    <asset>
        <texture name="grid" type="2d" builtin="checker" width="512" height="512" rgb1=".1 .2 .3" rgb2=".2 .3 .4"/>
        <material name="grid" texture="grid" texrepeat="30 30" reflectance=".2"/>
        <texture name="wood" type="2d" file="wood.png" />
        <material name="wood" texture="wood"/>
    </asset>
    <worldbody>
        <light diffuse=".8 .8 .8" pos="0 0 5" dir="0 0 -1"/>
        <!-- static things -->
        <geom name="ground" pos="0 0 0" type="plane" size="5 5 .01" material="grid" friction="0.2 0.2 0.2"/>
        <geom name="ramp" pos="0.5 0 0.0" type="box" size="2.0 1.0 0.05" euler="0 -30 0" material="wood" friction="0.2 0.2 0.2"/>
        <!-- dynamic things -->
        <body name="object" pos="0.0 0 0.1">
            <joint type="free"/>
            <inertial mass="1.0" pos="0 0 0" diaginertia="0.001 0.001 0.001"/>
            <geom name="object" type="box" size=".15 .15 .15" rgba="0 .9 0 1" friction="0.2 0.2 0.2"/>
        </body>
        <body name="tool" pos="-0.5 0 0.2">
            <joint type="slide" axis="1 0 0" name="tool_x" damping="2"/>
            <joint type="slide" axis="0 1 0" name="tool_y" damping="2"/>
            <joint type="slide" axis="0 0 1" name="tool_z" damping="2"/>
            <inertial mass="0.5" pos="0 0 0" diaginertia="0.001 0.001 0.001"/>
            <geom name="tool" type="sphere" size=".15 .15 .15" rgba="0.9 0 0 1" friction="0.2 0.2 0.2"/>
        </body> 
    </worldbody>
    <actuator>
        <position joint="tool_x" name="act_tool_x" kp="20" ctrllimited="true" ctrlrange="-5 5"/>
        <position joint="tool_y" name="act_tool_y" kp="20" ctrllimited="true" ctrlrange="-5 5"/>
        <position joint="tool_z" name="act_tool_z" kp="20" ctrllimited="true" ctrlrange="-5 5"/>
    </actuator>
</mujoco>
