            <joint type="free"/>
            <geom type="box" size=".15 .15 .15" rgba="0 .9 0 1" friction="0.2 0.2 0.2" mass="2.0"/>
        </body>
        <body name="tool" pos="-0.5 0 1.0">
            <joint type="slide" axis="1 0 0" name="tool_x"/>
            <joint type="slide" axis="0 1 0" name="tool_y"/>
            <geom type="box" size="1.0 1.0 .02" rgba="0.9 0 0 1" friction="0.2 0.2 0.2"/>
        </body> 
    </worldbody>
    <actuator>
        <position joint="tool_x" name="act_tool_x" kp="100"/>
        <position joint="tool_y" name="act_tool_y" kp="100"/>
    </actuator>
</mujoco>
