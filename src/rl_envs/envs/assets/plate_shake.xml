<mujoco>
    <option gravity="0 0 -9.81" integrator="RK4"> 
        <flag contact="enable" />
    </option>
    <asset>
        <texture name="grid" type="2d" builtin="checker" width="512" height="512" rgb1=".1 .2 .3" rgb2=".2 .3 .4"/>
        <material name="grid" texture="grid" texrepeat="30 30" reflectance=".2"/>
        <texture name="wood" type="2d" file="wood.png" />
