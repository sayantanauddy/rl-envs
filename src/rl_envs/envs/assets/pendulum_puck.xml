<mujoco model="pendulum_puck">
  <option gravity="0 0 -9.81" integrator="RK4" > 
    <flag contact="enable" />
  </option>
  <asset>
    <texture name="grid" type="2d" builtin="checker" width="512" height="512" rgb1=".1 .2 .3" rgb2=".2 .3 .4"/>
    <material name="grid" texture="grid" texrepeat="5 5" texuniform="true" reflectance=".2"/>
    <texture name="wood" type="2d" file="assets/wood.png" />
    <material name="wood" texture="wood" />
  </asset>

  <worldbody>
    <light pos="0 0 2"/>
    <geom name="ground" pos="0 0 -.5" type="plane" size="1 1 .01" material="grid" />
    <geom name="table" pos="0 0 -0.25" type="box" size="0.3 0.3 .01" mass="100" friction="0.05 1.0 1.0" material="wood"/>
    <geom name="target" pos="-0.5 0 -.499" type="plane" size="0.05 0.05 .01" rgba="1 0 0 1"/>
    <body>
      <joint name="theta" type="hinge" axis="0 1 0" damping="0.1"/>
      <geom name="pendulum_base" type="cylinder" size="0.02" fromto="0 -.02 0 0 .02 0"/>
      <body>
        <geom name="pendulum_shaft" type="capsule" size="0.005" fromto="0 0 0 .2 0 0"/>
        <body pos="0.2 0 0">
            <geom name="bob" type="sphere" size="0.02" pos="0 0 0" mass="2.0"/>
        </body>
      </body>
    </body>
    <body >
      <joint name="puck_joint" type="free" />
      <geom name="puck" pos="-0.05 0.0 -0.21" type="box" size="0.02 0.02 0.02" mass="1.0" friction="0.05 1.0 1.0" rgba="0 0 1 1"/>
    </body>
  </worldbody>
</mujoco>